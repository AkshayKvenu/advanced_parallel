<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data noupdate="0">
		<record id="hr_leave_rejection_email_template"
			model="mail.template">
			<field name="name">Leave Rejection</field>
			<field name="model_id"
				ref="hr_holidays_multi_levels_approval.model_hr_leave" />
			<field name="auto_delete" eval="True" />
			<field name="email_from">${user.email |safe}
			</field>
			<field name="email_to">${object.get_email_to()}</field>
			<field name="subject">Mail for Leave Rejection</field>
			<field name="body_html"><![CDATA[
             	<p>Dear ${object.employee_id.name},</p>
               <table>
                   <tr>
                    <td>Employee Name</td> 
                    <td>
                    </td>
                    <td>
                    </td>                      
                     <td>${object.employee_id.name}</td>
                  </tr>
                  <tr>
                    <td>Description</td>
                   <td>
                    </td>   
                     <td>
                    </td>
                     <td>${object.name}</td> 
                  </tr>
                  <tr>
                  <td>Leave Type</td>
                    <td>
                    </td>
                    <td>
                    </td>   
                     <td> ${object.holiday_status_id.name}</td>
                  </tr>
                  <tr>
                    <td>No Of Days</td>
                   <td>
                    </td>
                     <td>
                    </td>   
                     <td> ${object.number_of_days_display}</td> 
                  </tr>
                   <tr>
                    <td>Start Date</td>
                    <td>
                    </td>
                    <td>
                    </td>   
                   <td>${format_tz(object.date_from, tz='UTC', format='%d-%m-%Y')}</td> 
                 </tr>
                 <tr>
                  <td>End Date</td>
                  <td>
                    </td>
                    <td>
                    </td>   
                   <td>${format_tz(object.date_to, tz='UTC', format='%d-%m-%Y')}</td>
                  
                </tr> 
                <!-- <tr>
                  <td>Return Date</td>
                  <td>
                    </td>
                    <td>
                    </td>   
                  <td>
                    ${object.return_date}
                       </td>
                    </tr> -->
                </table>
                <br><p>Requested Leave for ${format_tz(object.date_from, tz='UTC', format='%d-%m-%Y')} to ${format_tz(object.date_to, tz='UTC', format='%d-%m-%Y')} days has rejected due to ${ctx['rejectns']} .</p>
                <br>
                <br>
                               
               <div style="text-align: left; margin-top: 16px;">
                <a href="${ctx['url']}" target="_blank" style="padding: 5px 10px; font-size: 12px; line-height: 18px; color: #FFFFFF; border-color:#875A7B; text-decoration: none; display: inline-block; margin-bottom: 0px; font-weight: 400; text-align: center; vertical-align: middle; cursor: pointer; white-space: nowrap; background-image: none; background-color:  
                 #875A7B; border: 1px solid #875A7B; border-radius:3px">View Details</a>
               </div>
                  <br>
                  <br>
                  <p>Regards,</p>
                   <p>${user.name}</p> 
                  ]]>
			

			</field>
		</record>
	</data>
</odoo>