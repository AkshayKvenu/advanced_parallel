<odoo>
  <data> 
    <record id="res_config_settings_view_terms" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.sale</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="10"/>
        <field name="inherit_id" ref="sale.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='sale_config_online_confirmation_sign']" position="after">
                        <div class="col-12 col-lg-6 o_setting_box" id="sale_config_terms">
                            <div class="o_setting_left_pane">
                                <field name="terms_sale_config"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="terms_sale_config"/>
                                <span class="fa fa-lg fa-building-o" title="Values set here are company-specific." groups="base.group_multi_company"/>
                                <div class="text-muted">
                                    Terms and condition from sale to invoice
                                </div>
                            </div>
                            </div>
            	
            </xpath>
            </field>
            </record>
  </data>
  </odoo>