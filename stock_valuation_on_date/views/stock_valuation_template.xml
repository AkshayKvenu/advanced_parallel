<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <template id="stock_valuation_ondate_report">
            <t t-call="web.html_container">
                <t t-set="data_report_margin_top" t-value="12" />
                <t t-set="data_report_header_spacing" t-value="9" />
                <t t-set="data_report_dpi" t-value="110" />
                <t t-call="web.internal_layout">
                    <div class="page">
                        <h2 class="text-center">Inventory Valuation Report</h2>
                        <t t-foreach="get_company(data['form']['company_id'])"
                            t-as="obj_company">
                            <div class="row">
                                <div class="col-xs-3 text-center"
                                    style="border-width:1px;border-style:ridge;">
                                    <strong>Company</strong>
                                    <p t-esc="obj_company['name']" />
                                </div>
                                <div class="col-xs-3 text-center"
                                    style="border-width:1px;border-style:ridge;">
                                    <strong>Warehouse</strong>
                                    <p
                                        t-esc="get_warehouses_block(data['form']['warehouse_ids'], data['form']['company_id'])" />
                                </div>
                                <div class="col-xs-3 text-center"
                                    style="border-width:1px;border-style:ridge;">
                                    <strong>Valuation Date</strong>
                                    <p t-esc="data['form']['start_date'] + ' TO ' + data['form']['end_date']" />
                                </div>
                                <div class="col-xs-3 text-center"
                                    style="border-width:1px;border-style:ridge;">
                                    <strong>Amount In Currency</strong>
                                    <p t-esc="obj_company['currency_id'][1]" />
                                </div>
                            </div>
                            <table class="table table-condensed">
                                <thead>
                                    <tr>
                                        <th class="text-left"
                                            style="color:#0F33C6;font-size: 17px;">
                                            <strong
                                                t-esc="obj_company['name']" />
                                        </th>
                                        <th class="text-right">Beginning</th>
                                        <th class="text-right">Received</th>
                                        <th class="text-right">Sales</th>
                                        <th class="text-right">Internal</th>
                                        <th class="text-right">Adjustments</th>
                                        <th class="text-right">UOM</th>
                                        <th class="text-right">Ending</th>
                                        <th class="text-right">Cost</th>
                                        <th class="text-right">Total Value</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t
                                        t-foreach="get_lines(data, obj_company['id']).items()"
                                        t-as="categ">
                                        <t
                                            t-if="not data['form']['only_summary']">
                                            <tr>
                                                <td>
                                                    <strong
                                                        style="color:#827575;font-size: 17px;"
                                                        t-esc="get_categ(categ[0])" />
                                                </td>
                                            </tr>
                                            <t t-foreach="(categ[1])"
                                                t-as="l">
                                                <t t-set="biggning_inv"
                                                    t-value="get_beginning_inventory(data,obj_company['id'],l['product_id'],l)" />
                                                <t t-set="ending_inv"
                                                    t-value="get_ending_inventory(l['product_qty_in'],l['product_qty_out'],l['product_qty_internal'],l['product_qty_adjustment'])" />
                                                <t t-set="cost"
                                                    t-value="get_cost(obj_company['id'], l['product_id'], data['form']['end_date']) or 0.0" />
                                                <t t-set="subtotal_cost"
                                                    t-value="get_subtotal_cost(cost, ending_inv, l) or 0.0" />
                                                <t
                                                    t-if="biggning_inv or ending_inv or l['product_qty_in'] or l['product_qty_out'] or l['product_qty_internal'] or l['product_qty_adjustment']">
                                                    <tr>
                                                        <td class="text-left">
                                                            <p
                                                                t-esc="get_product_name(l['product_id'])" />
                                                        </td>
                                                        <td class="text-right">
                                                            <p
                                                                t-esc="(biggning_inv or 0.0)" />
                                                        </td>
                                                        <td class="text-right">
                                                            <p
                                                                t-esc="(l['product_qty_in'])" />
                                                        </td>
                                                        <td class="text-right">
                                                            <p
                                                                t-esc="(l['product_qty_out'])" />
                                                        </td>
                                                        <td class="text-right">
                                                            <p
                                                                t-esc="(l['product_qty_internal'])" />
                                                        </td>
                                                        <td class="text-right">
                                                            <p
                                                                t-esc="(l['product_qty_adjustment'])" />
                                                        </td>
                                                        <td class="text-right">
                                                            <p
                                                                t-esc="get_product_uom(l['product_id'])" />
                                                        </td>
                                                        <td class="text-right">
                                                            <p
                                                                t-esc="ending_inv or 0.0" />
                                                        </td>
                                                        <td class="text-right" style="color:blue">
                                                            <p
                                                                t-esc="cost" />
                                                        </td>
                                                        <td class="text-right" style="color:blue">
                                                            <p
                                                                t-esc="subtotal_cost" />
                                                        </td>
                                                    </tr>
                                                </t>
                                            </t>
                                        </t>
                                        <t
                                            t-if="data['form']['only_summary']">
                                            <t t-foreach="(categ[1])"
                                                t-as="l">
                                                <t t-set="p"
                                                    t-value="(get_beginning_inventory(data,obj_company['id'],l['product_id'],l) or 0.0)" />
                                                <t t-set="q"
                                                    t-value="(get_ending_inventory(l['product_qty_in'],l['product_qty_out'],l['product_qty_internal'],l['product_qty_adjustment']) or 0.0)" />
                                                <t t-set="r"
                                                    t-value="get_cost(obj_company['id'], l['product_id'], data['form']['end_date']) or 0.0" />
                                                <t t-set="s"
                                                    t-value="get_subtotal_cost(r, q, l) or 0.0" />
                                            </t>
                                        </t>
                                        <t t-if="categ[1]">
                                            <tr class="border-black">
                                                <p
                                                    t-esc="get_value_exist(categ[0],obj_company['id'])" />
                                                <td class="text-right">
                                                    <strong
                                                        style="color:#827575;font-size: 17px;"
                                                        t-esc="get_categ(categ[0])" />
                                                </td>
                                                <td class="text-right" style="color:#9D5389">
                                                    <strong
                                                        t-esc="(total_begin())" />
                                                </td>
                                                <td class="text-right" style="color:#9D5389">
                                                    <strong
                                                        t-esc="(total_in())" />
                                                </td>
                                                <td class="text-right" style="color:#9D5389">
                                                    <strong
                                                        t-esc="(total_out())" />
                                                </td>
                                                <td class="text-right" style="color:#9D5389">
                                                    <strong
                                                        t-esc="(total_int())" />
                                                </td>
                                                <td class="text-right" style="color:#9D5389">
                                                    <strong
                                                        t-esc="(total_adj())" />
                                                </td>
                                                <td class="text-right" style="color:#9D5389">
                                                    <strong>-</strong>
                                                </td>
                                                <td class="text-right" style="color:#9D5389">
                                                    <strong
                                                        t-esc="(total_end())" />
                                                </td>
                                                <td class="text-right" style="color:#9D5389">
                                                    <strong />
                                                </td>
                                                <td class="text-right" style="color:#9D5389">
                                                    <strong
                                                        t-esc="categ_subtotal_cost()" />
                                                </td>
                                            </tr>
                                        </t>
                                    </t>
                                    <tr class="border-black">
                                        <td class="text-right">
                                            <strong
                                                style="color:#4B524F;font-size: 19px;">Total Inventory
                                            </strong>
                                        </td>
                                        <td class="text-right" style="color:#9D5389">
                                            <strong
                                                t-esc="(total_vals(obj_company['id'])[0])" />
                                        </td>
                                        <td class="text-right" style="color:#9D5389">
                                            <strong
                                                t-esc="(total_vals(obj_company['id'])[1])" />
                                        </td>
                                        <td class="text-right" style="color:#9D5389">
                                            <strong
                                                t-esc="(total_vals(obj_company['id'])[2])" />
                                        </td>
                                        <td class="text-right" style="color:#9D5389">
                                            <strong
                                                t-esc="(total_vals(obj_company['id'])[3])" />
                                        </td>
                                        <td class="text-right" style="color:#9D5389">
                                            <strong
                                                t-esc="(total_vals(obj_company['id'])[4])" />
                                        </td>
                                        <td class="text-right" style="color:#9D5389">
                                            <strong />
                                        </td>
                                        <td class="text-right" style="color:#9D5389">
                                            <strong
                                                t-esc="(total_vals(obj_company['id'])[5])" />
                                        </td>
                                        <td class="text-right" style="color:#9D5389">
                                            <strong />
                                        </td>
                                        <td class="text-right" style="color:#9D5389">
                                            <strong
                                                t-esc="(total_vals(obj_company['id'])[6])" />
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            <p style="page-break-before:always;">
                            </p>
                        </t>
                    </div>
                </t>
            </t>
        </template>
</odoo>
